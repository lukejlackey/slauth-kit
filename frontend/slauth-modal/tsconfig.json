{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["vite/client", "react", "react-dom"],
    "declaration": true,     
    "declarationDir": "dist", 
    "emitDeclarationOnly": true
  },
  "include": ["src"]
}
